---
// AdSenseHeader.astro
// Banner de cabecera optimizado para evitar CLS:
// - Desktop: Fijo 728x90 (Leaderboard)
// - Mobile: Fijo 320x100 (Large Mobile Banner)
---

<div class="ad-header-container">
  <!-- Desktop: Fijo 728x90 Leaderboard -->
  <div class="ad-header-desktop" id="ad-header-desktop">
    <ins class="adsbygoogle"
         style="display:inline-block;width:728px;height:90px"
         data-ad-client="ca-pub-9609544329602409"
         data-ad-slot="2203484639"></ins>
  </div>

  <!-- Mobile: Fijo 320x100 -->
  <div class="ad-header-mobile" id="ad-header-mobile">
    <ins class="adsbygoogle"
         style="display:inline-block;width:320px;height:100px"
         data-ad-client="ca-pub-9609544329602409"
         data-ad-slot="7370899456"></ins>
  </div>
</div>

<style>
  /* Contenedor principal - altura fija para evitar CLS */
  .ad-header-container {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10px 0;
    background-color: #fff;
    /* Desktop: reservar altura para 90px + 20px padding */
    min-height: 110px;
  }

  /* Desktop: Fijo 728x90 */
  .ad-header-desktop {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 728px;
    height: 90px;
  }

  .ad-header-mobile {
    display: none;
  }

  /* Mobile: mostrar 320x100 fijo, ocultar desktop */
  @media (max-width: 767px) {
    .ad-header-container {
      /* Mobile: reservar altura para 100px + 20px padding */
      min-height: 120px;
    }

    .ad-header-desktop {
      display: none;
    }

    .ad-header-mobile {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 320px;
      height: 100px;
    }
  }
</style>
